{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "lib": ["es6"],
    "allowJs": true,
    "removeComments": true,
    "noEmit": true,
    "importHelpers": true,
    "strict": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "noImplicitAny": true,
    "sourceMap": true,
    "outDir": "dist",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "baseUrl": "./",
    "paths": {
      "src": ["./src"],
      "__tests__": ["./__tests__"]
    }
  },
  "exclude": ["node_modules", "babel.config.js", "jest.config.js"]
}
